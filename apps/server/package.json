{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsc && tsc-alias",
		"check-types": "tsc --noEmit",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/src/index.js",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate"
	},
	"dependencies": {
		"@orpc/client": "^1.2.0",
		"@orpc/server": "^1.2.0",
		"axios": "^1.9.0",
		"cors": "^2.8.5",
		"dotenv": "^16.4.7",
		"drizzle-orm": "^0.38.4",
		"express": "^5.1.0",
		"pg": "^8.14.1",
		"zod": "^3.25.16"
	},
	"devDependencies": {
		"tsc-alias": "^1.8.11",
		"typescript": "^5.8.2",
		"@types/express": "^5.0.1",
		"@types/cors": "^2.8.17",
		"@types/bun": "^1.2.6",
		"drizzle-kit": "^0.30.5",
		"@types/pg": "^8.11.11"
	}
}
